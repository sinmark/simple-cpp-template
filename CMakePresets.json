{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Configure Debug Build (Ninja)",
            "binaryDir": "${sourceDir}/cmake-${presetName}-build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "/usr/bin/c++",
                "CMAKE_C_COMPILER": "/usr/bin/c++"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Configure Release Build (Ninja)",
            "binaryDir": "${sourceDir}/cmake-${presetName}-build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "/usr/bin/c++",
                "CMAKE_C_COMPILER": "/usr/bin/c++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug Build (Ninja)",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release Build (Ninja)",
            "configurePreset": "release"
        }
    ],
    "testPresets": [
        {
            "name": "debug-test",
            "displayName": "Debug Test",
            "description": "Run Tests for Debug Configuration",
            "configurePreset": "debug",
            "output": {
                "verbosity": "extra"
            }
        },
        {
            "name": "release-test",
            "displayName": "Release Test",
            "description": "Run Tests for Release Configuration",
            "configurePreset": "release",
            "output": {
                "verbosity": "extra"
            }
        }
    ]
}